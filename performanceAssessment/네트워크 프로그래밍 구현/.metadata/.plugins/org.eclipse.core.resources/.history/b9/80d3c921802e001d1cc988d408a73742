package test;

/*
 * 날짜 : 2022/09/07
 * 이름 : 서정현
 */
public class test5 {
	
	public static void main(String[] args) {
		
		int num = 4;
		int count = 1;
		
		num++;
		for(int i = 1; i <= num; i++) {
			
			for(int j = 0; j < (num-i)*2; j++) {
			
				if(j == (num - i)) {
					for(int k = 1; k <= count; k++) {
						System.out.print("★");
					}
				}
				System.out.print("☆");
			}
			
			count += 2;
			
			System.out.println();
		}
		
	}

}
