package test;

/*
 * 날짜 : 2022/09/07
 * 이름 : 서정현
 */
public class test05 {
	
	int num = 4;
	static String blackStar = "★";
	static String WhiteStar = "☆☆☆";

	public static void main(String[] args) {
		
		
		f(4);
		
	}
	
	public static void f(int num) {
		
		if(0 == num) {
			return;
		}

		System.out.print(WhiteStar);
		System.out.println(blackStar);
		
		blackStar += "★★";
		
		//WhiteStar = WhiteStar.substring(1);
		
		f(num--);
	}

}
