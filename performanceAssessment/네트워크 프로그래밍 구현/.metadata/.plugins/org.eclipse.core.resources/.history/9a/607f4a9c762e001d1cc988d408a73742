package test;

/*
 * 날짜 : 2022/09/07
 * 이름 : 서정현
 */
public class test04 {
	
	public static void main(String[] args) {
		
		int num = 5;
		
		for(int i = 0; i < num; i++) {
			
			for(int j = 1; j <num-i; j++) {
				System.out.print("☆");
			}
			
			i += 2;
			for(int j = 0; j <= i+2; j++) {
				System.out.print("★");
			}
			
			for(int j = 1; j <num-i; j++) {
				System.out.print("☆");
			}
			System.out.println();
		}
		
	}

}
